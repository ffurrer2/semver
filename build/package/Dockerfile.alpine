FROM docker.io/library/alpine:3.15.0

RUN set -ex \
    && addgroup -g 101 -S semver \
    && adduser -h /dev/null -g semver -S -D -G semver -H -u 101 semver

COPY --chown=semver:semver semver /usr/local/bin/semver

USER semver

ENTRYPOINT ["/usr/local/bin/semver"]
CMD ["help"]
