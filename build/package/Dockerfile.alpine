# https://hub.docker.com/_/alpine
FROM docker.io/library/alpine:3.16.2

RUN set -ex \
    && addgroup -g 65532 -S semver \
    && adduser -h /dev/null -g semver -S -D -G semver -H -u 65532 semver

COPY semver /usr/local/bin/semver

USER 65532:65532

ENTRYPOINT ["/usr/local/bin/semver"]
CMD ["help"]
